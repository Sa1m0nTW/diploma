@model WorkWise.ViewModels.ProfileViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Карточка профиля -->
            <div class="card shadow-sm">
                <!-- Блок с аватаркой и основными данными -->
                <div class="card-body text-center p-4">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl"
                             class="rounded-circle mb-3 shadow"
                             width="150" height="150"
                             alt="@Model.FullName">
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3 shadow"
                             style="width: 150px; height: 150px;">
                            <span class="text-dark fs-1">@Model.FullName?[0]</span>
                        </div>
                    }

                    <h3 class="mb-1">@Model.FullName</h3>
                    <p class="text-muted mb-3">@Model.Email</p>

                    @if (Model.IsCurrentUser)
                    {
                        <a asp-action="Edit" class="btn btn-primary mb-4">
                            <i class="bi bi-pencil"></i> Редактировать профиль
                        </a>
                    }
                </div>

                <!-- Разделитель -->
                <hr class="my-0">

                <!-- Детали профиля -->
                <div class="card-body p-4">
                    <h4 class="card-title mb-4">Информация</h4>

                    <!-- Блок "О себе" -->
                    <div class="mb-4">
                        <h5 class="d-flex align-items-center gap-2">
                            <i class="bi bi-person-lines-fill text-primary"></i>
                            <span>О себе</span>
                        </h5>
                        <div class="ps-4">
                            <p class="text-muted @(string.IsNullOrEmpty(Model.Bio) ? "fst-italic" : "")">
                                @(Model.Bio ?? "Пользователь не добавил информацию о себе")
                            </p>
                        </div>
                    </div>

                    <!-- Блок "Дата рождения" -->
                    <div class="mb-4">
                        <h5 class="d-flex align-items-center gap-2">
                            <i class="bi bi-calendar-event text-primary"></i>
                            <span>Дата рождения</span>
                        </h5>
                        <div class="ps-4">
                            <p class="text-muted @(Model.BirthDate == null ? "fst-italic" : "")">
                                @(Model.BirthDate?.ToShortDateString() ?? "Не указана")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Кнопка "Назад" -->
            <div class="mt-3 text-center">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад
                </a>
            </div>
        </div>
    </div>
</div>