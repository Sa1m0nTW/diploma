@model WorkWise.ViewModels.ProfileViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" 
                             class="rounded-circle mb-3" 
                             width="200" height="200"
                             alt="@Model.FullName">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                             style="width: 200px; height: 200px;">
                            <span class="text-white fs-1">@Model.FullName?[0]</span>
                        </div>
                    }
                    
                    <h3>@Model.FullName</h3>
                    <p class="text-muted">@Model.Email</p>
                    
                    @if (Model.IsCurrentUser)
                    {
                        <a asp-action="Edit" class="btn btn-primary mb-2">
                            <i class="bi bi-pencil"></i> Редактировать
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4>Информация</h4>
                    <hr />
                    
                    <div class="mb-3">
                        <h5>О себе</h5>
                        <p>@(Model.Bio ?? "Не указано")</p>
                    </div>
                    
                    <div class="mb-3">
                        <h5>Дата рождения</h5>
                        <p>@(Model.BirthDate?.ToShortDateString() ?? "Не указана")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Назад
        </a>
    </div>
</div>